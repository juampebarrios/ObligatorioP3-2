@{ ViewData["Title"] = "Login"; }


<div class="row justify-content-center">
    <div class="col col-sm-8">
        <h1>@ViewData["Title"]</h1>
        <p>Para acceder a la gestión del Vivero, primero debe autenticarse:</p>
        <form class="card p-3" asp-controller="Usuarios" asp-action="Login" method="post">
            <div class="form-group">
                <label for="txtUserEmail">Email:</label>
                <input type="email" class="form-control" name="usu" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="txtPassword">Contraseña:</label>
                <input type="password" class="form-control" name="pass" placeholder="Contraseña">
            </div>
            <div class="form-group">
                <input type="submit" id="btnLogin" class="btn btn-primary float-right mt-2" value="Ingresar">
            </div>
        </form>
    </div>
</div>

